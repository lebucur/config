#alias
alias sra='source ~/.alias'
alias allias='alias | grep $1'

#launch
alias tmx=tmux
alias gi=git
alias vi=vim
alias le=less
alias py=python3
alias tl='~/.local/bin/tldr'
alias tld='/usr/bin/tldr'

#list
alias ls='ls --color=auto --classify'
alias l=ls
alias la='ls -A'
alias ll='ls --format=long --human-readable'
alias lla='ls --format=long --all --human-readable'

#navigate
alias ..='cd ..'
alias ...='cd ../..'
alias r='cd ..; cd -'

#help
alias mank='man -k'
alias info='info --vi-keys'

#console
alias clr=clear
alias c=clear
alias xx=exit

#processes
alias pscpu='ps auxf | sort -nr -k 3 | head -10'
alias psmem='ps auxf | sort -nr -k 4 | head -10'

#find
alias grepp='grep -Rnsi --color'
alias llg='ll | grep --ignore-case --color=auto'

#build
alias make='clear; make'
alias a=./a.out

#functions

findf() 
{
    find 2>&1 -iname '*$1*' ${@:2} | grep -v 'Permission denied'
}

hi()
{
    if [ '$1' != '' ]; then
        history | grep $1
    else
        history | less
    fi
}

weather() 
{
    curl -s wttr.in/$1
}

man() {
    env \
    LESS_TERMCAP_mb=$'\e[01;31m' \
    LESS_TERMCAP_md=$'\e[01;38;5;74m' \
    LESS_TERMCAP_me=$'\e[0m' \
    LESS_TERMCAP_se=$'\e[0m' \
    LESS_TERMCAP_so=$'\e[46;30m' \
    LESS_TERMCAP_ue=$'\e[0m' \
    LESS_TERMCAP_us=$'\e[04;38;5;146m' \
    man "$@"
}

